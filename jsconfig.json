{
    "compilerOptions": {
      "target": "es6", // Specify ECMAScript target version
      "module": "commonjs", // Specify module code generation
      "baseUrl": "./src", // Base directory inside 'src' to resolve non-relative module names
      "esModuleInterop": true, // Enables compatibility with Babel-generated modules
      "allowSyntheticDefaultImports": true, // Allow default imports from modules with no default export
      "resolveJsonModule": true // Include modules imported from .json files
    },
    "include": ["src/**/*"], // Include all files in the 'src' directory
    "exclude": ["node_modules", "dist"] // Exclude directories
  }
  